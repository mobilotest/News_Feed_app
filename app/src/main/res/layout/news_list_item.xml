<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="400dp"
android:background="@color/color_primary"
android:minHeight="@dimen/list_item_height">

<ImageView
    android:id="@+id/img_newspic"
    android:layout_width="390dp"
    android:layout_height="250dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    tools:srcCompat="@tools:sample/backgrounds/scenic"
    android:layout_alignParentLeft="true"
    android:scaleType="centerCrop"/>

<TextView
    android:id="@+id/tv_header"
    android:textColor="@color/text_color"
    android:layout_width="387dp"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="108dp"
    android:text="Text Header" />

<TextView
    android:id="@+id/tv_author"
    android:textColor="@color/text_color"
    android:layout_width="390dp"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="42dp"
    android:text="Text Author" />

<ImageView
    android:id="@+id/ic_rubrica"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="11dp"
    android:layout_marginBottom="8dp"
    app:srcCompat="@android:drawable/ic_menu_gallery"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="11dp" />

<TextView
    android:id="@+id/tv_section"
    android:layout_width="153dp"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="52dp"
    android:layout_marginBottom="15dp"
    android:text="Brain Wash"
    android:textStyle="italic"
    android:layout_alignParentLeft="true"
    android:textColor="@color/text_color"
    android:layout_marginLeft="52dp" />

<ImageView
    android:id="@+id/ic_time_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="223dp"
    android:layout_marginBottom="8dp"
    app:srcCompat="@android:drawable/ic_menu_recent_history"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="223dp" />

<TextView
    android:id="@+id/tv_date_time"
    android:textColor="@color/text_color"
    android:layout_width="137dp"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="15dp"
    android:text="May 26, 2020"
    android:textStyle="italic"
    android:layout_alignParentRight="true"
    android:layout_marginRight="12dp" />

</RelativeLayout>